<VirtualHost *:80>
  ServerName <%= @server_name %>
  ServerAlias <%= @server_aliases %>
  DocumentRoot <%= @docroot %>

  <Directory <%= @docroot %>>
    Options Indexes FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>

  <Directory />
    Options Indexes FollowSymLinks
    AllowOverride None
  </Directory>

  LogLevel info
  ErrorLog <%= node[:apache][:log_dir] %>/yum_repo-error.log
  CustomLog <%= node[:apache][:log_dir] %>/yum_repo-access.log combined

</VirtualHost>
